@{
  Layout = "_Layout";
}

@using PierresTreats.Models;
@model List<PierresTreats.Models.Flavor>;

<h1>Flavors</h1>

@if (@Model.Count == 0)
{
  <h3>No Flavors have been added yet!</h3>
}

<ul class="list-group">
  @foreach (Flavor Flavor in Model)
  {
    <li class="list-group-item">@Html.ActionLink($"{Flavor.FlavorName}", "Details", new { id = Flavor.FlavorId })</li>
  }
</ul>
<hr />
<p class="btn btn-outline-secondary" role="button" aria-disabled="true">@Html.ActionLink("Add new Flavor", "Create")</p>
