@{
  Layout = "_Layout";
}

@using System.Collections.Generic;
@model PierresTreats.Models.Flavor

<h2>Add a Treat</h2>

<h4>Add a treat with this flavor profile: @Html.DisplayFor(model => model.FlavorName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.FlavorId)

  @Html.Label("Select Treat")
  @Html.DropDownList("TreatId")

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to flavor list", "Index")</p>