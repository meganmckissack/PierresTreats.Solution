@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Treat

<h4>Add a new Treat</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.TreatName)
  @Html.TextBoxFor(model => model.TreatName)

  @Html.Label("Select Flavor")
  @Html.DropDownList("FlavorId")

  <input type="submit" value="Add new Treat" />
}
<hr />
<p class="btn btn-outline-secondary" role="button" aria-disabled="true">@Html.ActionLink("Show all Treats", "Index")</p>