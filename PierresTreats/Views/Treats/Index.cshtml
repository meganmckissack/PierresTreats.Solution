@{
  Layout = "_Layout";
} 

@using PierresTreats.Models;
@model List<PierresTreats.Models.Treat>;

<h1>Treats</h1>

@if (@Model.Count == 0)
{
  <h3>No Treats have been added yet!</h3>
} 

<ul class="list-group">
  @foreach(Treat Treat in Model)
  {
    <li class="list-group-item">@Html.ActionLink($"{Treat.TreatName}", "Details", new { id = Treat.TreatId })</li>
  }
</ul>
<hr />
<p class="btn btn-outline-secondary" role="button" aria-disabled="true">@Html.ActionLink("Add new Treat", "Create")</p>
